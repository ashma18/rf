<% if notice %>
<aside id="notice"><%= notice %></aside>
<% end %>
<%= search_form_for @search do |f| %>
    <div class="field">
        <%= f.label :title_cont %>
        <%= f.text_field :title_cont %>
    </div>
    <div class="actions"><%= f.submit "Search" %></div>
<% end %>
<div class="container-fluid">
<h1>Your Products</h1>
<div class="col">
<%= link_to 'Create New product', new_product_path, class: 'btn btn-dark' %>
</div>
<% @products.each do |product| %>
    <div class="row">
      <div class="col">
        <%= image_tag(product.image.thumb.url, class: 'list_image') %>
      </div>
      <div class="col-6">
          <h1><%= product.title %></h1> 
          <p> <%= strip_tags(product.description) %> </p>  
      </div>
      <div class="col">
        <%= link_to 'View', product, class: 'btn btn-dark'%>
        <%= link_to 'Edit', edit_product_path(product),class: 'btn btn-dark' %>
        <%= link_to 'Destroy', product, method: :delete, data: {confirm: 'Are you sure?' }, class: 'btn btn-dark'%>
      </div>
    </div>
<% end %> 

</div>

