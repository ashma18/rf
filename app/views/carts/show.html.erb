<% if notice %>
<aside id="notice"><%= notice %></p> </aside>
<% end %>
<h2 id="cart_head"> Your Cart </h2>
<div class="row">
    <div class="col-lg-6 col-sm-12 col-xs-12">
        <div id="cart_table">
            <table class="table table-bordered table-sm">
                <thead class="thead-dark">
                    <th scope="col"> Quantity </th>
                    <th scope="col"> Item </th>
                    <th scope="col"> Price </th>        
                </thead>
                <% @cart.line_items.each do |line_item| %>
                    <tr> 
                        <td class="quantity"> <%= line_item.quantity %> </td>
                        <td> <%= line_item.product.title %> </td>
                        <td class = "price"> <%=number_to_currency(line_item.total_price) %> </td>
                    </tr>
                <% end %>
                <tfoot>
                    <tr>
                        <th colspan="2"> Total: </th>
                        <td class="price"> <%= number_to_currency(@cart.total_price) %> </td>
                    </tr>
                </tfoot>
            </table>
        </div>  
    </div>
    <div class="col-lg-6 col-sm-12 col-xs-12">
        <div class="row" id="cart_button">
        <%= button_to 'Empty Cart', @cart, method: :delete,
            data: { confirm: 'Are you sure?' }, class: 'btn btn-dark'%>

        <%= button_to 'Checkout', new_order_path,
                    method: :get,
                    class: "btn btn-dark" %>
        <%= button_to 'Continue Shopping', shop_index_path, method: :get, class: 'btn btn-dark' %>
        </div>
    </div>   
</div>

