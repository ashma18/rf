<% if notice %>
    <aside id="notice"> <%= notice %> </aside>
<% end %>

<ul class="catalogue"> 
    <% cache @products do %>
        <% @products.each do |product| %>
            <% cache product do %>
                <div=class"container-fluid">
                    <div class="row">
                        <div class="col">
                            <%= image_tag(product.image.thumb.url) %>
                        </div>
                        <div class="col-6">
                            <h2> <%= product.title %> </h2>
                            <h3> <%= product.user.first_name + " " + product.user.last_name %> </h3>
                            </h3> <%= product.description %> </h3>
                            <p>
                                <% sanitize(product.description) %>
                            </p>
                            <div class="price">
                                <%= number_to_currency(product.price) %>
                            </div>
                        </div>
                        <div class="col">
                                <%= button_to 'Add to Cart', line_items_path(product_id: product),class: 'btn btn-dark' %>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
        <% end %>
    <% end %>
</ul>



